function onZsh()
    tabInfo = {}
    tabInfo.name = 'Zsh tab'
    tabInfo.command = 'zsh'
    tabInfo.encoding = 'UTF-8'
    tabInfo.working_dir = '/tmp'
    openTab(tabInfo)
end
function onNamed()
    setTabName('New tab name')
end
function onClose()
    closeTab()
end
function onSelection()
    tab = tabs[currentTab()]
    print(tab.fontName)
    print(tab.fontSize)
    --setTabFont('Terminus 16')
    print(selection())
end
function onReconf()
    reconfigure()
end
function onSetColor()
    setColor('red')
end
